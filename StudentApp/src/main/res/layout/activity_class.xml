<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="www.sinofreely.app.view.ClassActivity">
    <include layout="@layout/header"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ListView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/listview_school"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:background="#F3F3F3"></ListView>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#C8C8C8"/>
        <ListView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/listview_class"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:background="@android:color/white"></ListView>
    </LinearLayout>
</LinearLayout>
